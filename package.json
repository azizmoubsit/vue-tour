{
    "name": "@salamander.be/vue-kanban-board",
    "description": "A VueJs kanban board.",
    "author": "Frederiek <frederiek@salamander.be>",
    "license": "MIT",
	"version": "0.1.7",
	"main": "./dist/vue-kanban-board.common.js",
	"keywords": [
		"vue",
		"kanban"
	],
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"build-bundle": "vue-cli-service build --target lib --name vue-kanban-board ./src/components/index.js",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"vue": "^2.5.17"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.0.4",
		"@vue/cli-plugin-eslint": "^3.0.4",
		"@vue/cli-service": "^3.0.4",
		"vue-template-compiler": "^2.5.17",
		"node-sass": "^4.9.0",
		"sass-loader": "^7.0.1",
		"dragula": "^3.7.2"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
    },
    "repository": {
		"type": "git",
		"url": "https://github.com/salamanderbe/vue-kanban-board"
	},
	"files": [
		"dist/*",
		"src/*",
		"public/*",
		"*.json",
		"*.js"
	],
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	]
}
